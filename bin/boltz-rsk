#!/usr/bin/env node

require('yargs')
  .options({
    'provider': {
      describe: 'HTTP endpoint of the web3 provider',
      default: 'http://127.0.0.1:4444',
      type: 'string',
      alias: 'p',
    },
    'signer': {
      describe: 'address for the JsonRpcSigner',
      default: '0x3a240f3911634410fc73f8c5192070f482369d30',
      type: 'string',
      alias: 's',
    },
  })
  .commandDir('../dist/lib/cli/rsk/commands/')
  .demandCommand(1, '')
  .strict()
  .argv;
